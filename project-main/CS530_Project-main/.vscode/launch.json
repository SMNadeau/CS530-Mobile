{
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/functions/app.js",
            "request": "launch",
            "cwd": "${workspaceFolder}/functions",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node"
        }
    ]
}